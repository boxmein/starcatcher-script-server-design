//- Main page, extends the layout code.

extends layout
block main
  .grid-container
    #script-list.grid-33.mobile-grid-100.hide-on-directlink
      h4 Scripts
      ul#script-list-ul
        .spinner
      #next-page.styled-button more
      #collapse-list.styled-button.hide-on-desktop &#8801;

    #script-thing.grid-66.mobile-grid-100
      #script-view
        .script
          .spinner

block append body
  script#scripttemplate(type='text/x-underscore-template')
    include partials/script._template
  script#submitviewtemplate(type='text/x-underscore-template')
    include partials/edit-submit-view._template
  script#listitemtemplate(type='text/x-underscore-template')
    include partials/list-item._template

  script(defer, src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js')
  script(defer, src='https://code.jquery.com/jquery-2.1.1.min.js')
  script(defer, src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js')
  script(defer, src='highlight.pack.js')
  script(defer, src='main.min.js')
